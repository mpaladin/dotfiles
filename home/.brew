#!/bin/bash

command -v brew >/dev/null 2>&1
if [ "$?" -ne "0" ]; then
    echo "You should probably install Homebrew first:"
    echo "https://github.com/mxcl/homebrew/wiki/installation"
    exit
fi

MODE=normal
if [ "${1}" ==  "all" ]; then
  MODE=all
fi

sudo -v # ask for password only at the beginning

brew doctor
brew update
brew upgrade
brew cleanup

function install {
  brew ls $1 >/dev/null 2>&1
  if [ "$?" -ne "0" ]; then
    brew install "$@"
  else
    echo "$1 already installed"
  fi
}

function cask_install {
  brew cask list $1 >/dev/null 2>&1
  if [ "$?" -ne "0" ]; then
    brew cask install "$@"
  else
    echo "$1 cask already installed"
  fi
}

install coreutils

install bash
install bash-completion

install colordiff
install dwdiff
install gawk
install maven

install git
install mercurial
install subversion

install atool
install unrar
install wget

# cask
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
brew tap phinze/homebrew-cask
brew tap caskroom/versions
install brew-cask

cask_install alfred
brew cask alfred link

cask_install appcleaner
cask_install flash
cask_install google-drive
cask_install google-chrome
cask_install google-hangouts
cask_install hipchat
cask_install intellij-idea
cask_install istat-menus
cask_install iterm2
cask_install pycharm
cask_install spotify
cask_install teamviewer
cask_install textmate
cask_install the-unarchiver

# vagrant
cask_install vagrant
vagrant plugin install vagrant-box-updater
vagrant plugin install vagrant-vbox-snapshot
vagrant plugin install vagrant-windows

cask_install virtualbox
cask_install vlc

if [ "${MODE}" ==  "all" ]; then
cask_install android-file-transfer
cask_install arduino
cask_install calibre
cask_install ccleaner
cask_install cyberduck
cask_install dropbox
cask_install evernote
cask_install firefox
cask_install flip4mac
cask_install handbrake
cask_install iterm2
cask_install google-music
cask_install musicmanager
cask_install perian
cask_install skype
cask_install transmission
fi

brew cleanup

